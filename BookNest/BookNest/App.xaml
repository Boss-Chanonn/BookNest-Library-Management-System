<Application
    x:Class="BookNest.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BookNest"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonsStyles.xaml" />
                <ResourceDictionary Source="Styles/ColoursStyles.xaml" />
                <ResourceDictionary Source="Styles/LayoutsStyles.xaml" />
                <ResourceDictionary Source="Styles/PagesStyles.xaml" />
                <ResourceDictionary Source="Styles/TypographyStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="local:MainWindow">
                <Setter Property="Background" Value="Black" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
