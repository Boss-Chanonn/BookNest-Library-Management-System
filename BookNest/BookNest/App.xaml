<Application
    x:Class="BookNest.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:BookNest"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <!--  Resource dictionaries  -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonsStyles.xaml" />
                <ResourceDictionary Source="Styles/ColoursStyles.xaml" />
                <ResourceDictionary Source="Styles/LayoutsStyles.xaml" />
                <ResourceDictionary Source="Styles/PagesStyles.xaml" />
                <ResourceDictionary Source="Styles/TypographyStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Window background  -->
            <Style TargetType="local:MainWindow">
                <Setter Property="Background" Value="{StaticResource Black}" />
            </Style>

            <!--  Title bar  -->
            <System:String x:Key="AppTitle">BookNest</System:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
