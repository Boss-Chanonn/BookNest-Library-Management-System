<UserControl
    x:Class="BookNest.Components.NavButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookNest.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Button Content="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{Binding ButtonStyle, RelativeSource={RelativeSource AncestorType=UserControl}}" />

</UserControl>
