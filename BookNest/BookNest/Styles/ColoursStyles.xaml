<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Accents  -->
    <SolidColorBrush x:Key="Primary" Color="#43C476" />
    <SolidColorBrush x:Key="Secondary" Color="#DA0463" />
    <SolidColorBrush x:Key="LightBlue" Color="#DB5656" />
    <SolidColorBrush x:Key="Destructive" Color="#DB5656" />

    <!--  Blue tones  -->
    <SolidColorBrush x:Key="Blue1" Color="#3C4661" />
    <SolidColorBrush x:Key="Blue2" Color="#262C3F" />
    <SolidColorBrush x:Key="Blue3" Color="#1E2536" />

    <!--  Black and white  -->
    <SolidColorBrush x:Key="Black" Color="#22242C" />
    <SolidColorBrush x:Key="White" Color="#F2F2F2" />

    <!--  Grey tones  -->
    <SolidColorBrush x:Key="Grey1" Color="#FFA2A3A7" />
    <SolidColorBrush x:Key="Grey2" Color="#FF72747F" />
    <SolidColorBrush x:Key="Grey3" Color="#FF494B56" />
    <SolidColorBrush x:Key="Grey4" Color="#2F323F" />

</ResourceDictionary>